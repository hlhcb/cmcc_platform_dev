<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmcc.system.mapper.BusinessProcessingCountMapper">
    
    <resultMap type="BusinessProcessingCount" id="BusinessProcessingCountResult">
        <result property="id"    column="id"    />
        <result property="recordDate"    column="record_date"    />
        <result property="marketingType"    column="marketing_type"    />
        <result property="countyName"    column="county_name"    />
        <result property="countyId"    column="county_id"    />
        <result property="businessCount"    column="business_count"    />
    </resultMap>


    <resultMap type="BusinessCountResult" id="BusinessCountResultResult">
        <result property="marketingType"    column="marketing_type"    />
        <result property="marketingTypeName"    column="marketing_type_name"    />
        <result property="total"    column="total"    />
    </resultMap>

    <resultMap type="CountyBusinessVo" id="CountyBusinessVoResult">
        <result property="countyId"    column="county_id"    />
        <result property="marketingType"    column="marketing_type"    />
        <result property="total"    column="total"    />
    </resultMap>

    <sql id="selectBusinessProcessingCountVo">
        select id, record_date, marketing_type, county_name, county_id, business_count from business_processing_count
    </sql>

    <select id="selectBusinessCountByDate" parameterType="String" resultMap="BusinessCountResultResult">
        select marketing_type,  ifnull(sum(business_count),0)  as `total` from business_processing_count
        <where>
            record_date like concat(#{currYear}, '%')
        </where>
        GROUP BY marketing_type order by marketing_type
    </select>

    <select id="selectCountyBusinessByDate" parameterType="String" resultMap="CountyBusinessVoResult">
        select county_name  as county_id, marketing_type, sum(business_count) as `total` from business_processing_count
        <where>
            record_date like concat(#{currYear}, '%')
        </where>
        GROUP BY county_name, marketing_type order by county_name ,marketing_type
    </select>


    <select id="selectBusinessProcessingCountList" parameterType="BusinessProcessingCount" resultMap="BusinessProcessingCountResult">
        <include refid="selectBusinessProcessingCountVo"/>
        <where>  
            <if test="recordDate != null "> and record_date = #{recordDate}</if>
            <if test="marketingType != null  and marketingType != ''"> and marketing_type = #{marketingType}</if>
            <if test="countyName != null  and countyName != ''"> and county_name = #{countyName}</if>
        </where>
    </select>
    
    <select id="selectBusinessProcessingCountById" parameterType="String" resultMap="BusinessProcessingCountResult">
        <include refid="selectBusinessProcessingCountVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusinessProcessingCount" parameterType="BusinessProcessingCount">
        insert into business_processing_count
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="recordDate != null">record_date,</if>
            <if test="marketingType != null">marketing_type,</if>
            <if test="countyName != null">county_name,</if>
            <if test="countyId != null">county_id,</if>
            <if test="businessCount != null">business_count,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="recordDate != null">#{recordDate},</if>
            <if test="marketingType != null">#{marketingType},</if>
            <if test="countyName != null">#{countyName},</if>
            <if test="countyId != null">#{countyId},</if>
            <if test="businessCount != null">#{businessCount},</if>
         </trim>
    </insert>

    <update id="updateBusinessProcessingCount" parameterType="BusinessProcessingCount">
        update business_processing_count
        <trim prefix="SET" suffixOverrides=",">
            <if test="recordDate != null">record_date = #{recordDate},</if>
            <if test="marketingType != null">marketing_type = #{marketingType},</if>
            <if test="countyName != null">county_name = #{countyName},</if>
            <if test="countyId != null">county_id = #{countyId},</if>
            <if test="businessCount != null">business_count = #{businessCount},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusinessProcessingCountById" parameterType="String">
        delete from business_processing_count where id = #{id}
    </delete>

    <delete id="deleteBusinessProcessingCountByIds" parameterType="String">
        delete from business_processing_count where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>